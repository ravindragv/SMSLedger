<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMSLedger" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/day_primary</item>
        <item name="colorPrimaryVariant">@color/day_primary_variant</item>
        <item name="colorOnPrimary">@color/day_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/day_secondary</item>
        <item name="colorSecondaryVariant">@color/day_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/Theme.SMSLedger.ActionBar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SMSLedger.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/day_primary</item>
        <item name="colorPrimaryDark">@color/day_primary_variant</item>
        <item name="colorOnPrimary">@color/day_on_primary</item>
    </style>

</resources>